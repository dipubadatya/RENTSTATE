<% layout('/layout/boilerplate')%>

<body>
    
  <form action="/listings"  method="post" novalidate class="needs-validation" enctype="multipart/form-data">
    
  <div class="row">
    <div class="col-5 offset-2">
      <br>
      <br> 
      <h1>CREATE NEW LISTING</h1>
  <div class="mb-3" >
      <label for="title" class="form-label">title</label>
     <input name="listing[title]"  type="text" placeholder="enter title" class="form-control" required/>
     <div class="valid-feedback">Title looks good! </div>
      

  </div>
   
  <div class="mb-3">
    <label for="description" class="form-label">description</label>
<textarea name="listing[description]"  type="text" placeholder="enter description" class="form-control" required ></textarea>
<div class="invalid-feedback">Please enter a short descriptiopn </div>

  </div>

  <div class="mb-3">
    <label for="image" class="form-label">image link</label>
   <input name="listing[image]"  type="file" placeholder="upload image" class="form-control" required  />
   <div class="invalid-feedback">Please enetr valid link for image</div>
    

  </div>

  <div class="mb-3">
    <label for="price" class="form-label">price</label>
   <input name="listing[price]"  type="text" placeholder="enter price" class="form-control"  required />
   <div class="invalid-feedback">Price should be valid </div>
    

  </div>

  <div class="mb-3">
    <label for="country" class="form-label">Country</label>
   <input name="listing[country]"  type="text" placeholder="enter country name" class="form-control"  required />
   <div class="invalid-feedback">Country should be valid </div>


  </div>

  <div class="mb-3">
    <label for="location" class="form-label">location</label>
   <input name="listing[location]"  type="text" placeholder="enter location " class="form-control"  required />
   <div class="invalid-feedback">Location should be valid </div>


  </div>
